<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/Images/Faridah app Logo.png" type="image/png">
    <title>Pilgrim Homepage</title>
    <link rel="stylesheet" href="/css/style-homePil.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/footer-pil.css">
    <nav><%- include('./component/navbar-pil.ejs') %></nav>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="logo">
                <img src="/Images/Faridah app Logo.png" alt="Site Logo">
            </div>
            <nav class="nav-menu">
                <a href="#" class="menu-item">Home</a>
                <a href="/hujjGuide" class="menu-item">Hajj Guide</a>
                <a href="#" class="menu-item">Chat with Organizer</a>
            </nav>
        </aside>
       <main class="content">
    <header class="header">
        <!--naaaav-->
    </header>

    <!-- Title and User Info Card -->
    <section class="user-info-section" id="user-info-section">
        <h2 class="section-title">Pilgrim Information</h2>
        <div class="info-card">
            <div class="info-details">
                <p><strong>First Name: </strong> <%= pilgrim.firstName %></p>
                <p><strong>Last Name: </strong> <%= pilgrim.lastName %></p>
                <p><strong>Gender: </strong> <%= pilgrim.gender %></p>
                <p><strong>Date of Birth: </strong> <%= pilgrim.dob %></p>
                <p><strong>Nationality: </strong> <%= pilgrim.nationality %></p>
                <p><strong>Province: </strong> <%= pilgrim.province %></p>
            </div>
        </div>
    </section>
    

    <!-- Title and Flight Info Card -->
    <section class="flight-info-section" id="flight-info-section">
        <h2 class="section-title">Flight Information</h2>
        <div class="info-card">
            <div class="info-details">
                <% if (flight && flight.flightNumber) { %>
                    <p><strong>Flight Number:</strong> <%= flight.flightNumber %></p>
                    <p><strong>Date:</strong> <%= flight.date ? flight.date.toDateString() : 'N/A' %></p>
                    <p><strong>Time:</strong> <%= flight.time %></p>
                    <p><strong>Destination:</strong> <%= flight.destination %></p>
                <% } else { %>
                    <p>No flight information available.</p>
                <% } %>
            </div>
        </div>
    </section>
    
    
    

    <!-- Chat with Organizer Section (Initially Hidden) -->
    <section class="chat-section" id="chatSection" style="display: none;">
        <h2 class="section-title">Chat with Organizer</h2>
        <div class="chat-box" id="chat-box"></div>
        <div class="chat-input">
            <input type="text" id="messageInput" placeholder="Type your message here">
            <button id="sendButton">Send</button>
        </div>
    </section>
</main>
    </div>
   
    <script src="/socket.io/socket.io.js"></script>
    <script src="/JavaScript/homePilgScript.js"></script>
    <%- include('./component/footer-pil.ejs') %>
</body>
</html>
