<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/Images/Faridah app Logo.png" type="image/png">
    <title>Pilgrim Homepage</title>
    <link rel="stylesheet" href="/css/style-homePil.css">
    <link rel="stylesheet" href="/css/footer.css">

</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="logo">
                <img src="/Images/Faridah app Logo.png" alt="Site Logo">
            </div>
            <nav class="nav-menu">
                <a href="#" class="menu-item">Home</a>
                <a href="/hujjGuide" class="menu-item">Hajj Guide</a>
                <a href="#" class="menu-item">Chat with Organizer</a>
            </nav>
        </aside>
       <main class="content">
    <header class="header">
        <!--naaaav-->
    </header>

    <!-- Title and User Info Card -->
    <section class="user-info-section" id="user-info-section">
        <h2 class="section-title">Pilgrim Information</h2>
        <div class="info-card">
            <div class="info-details">
                <p><strong>Name:</strong> <!--database--></p>
                <p><strong>Gender:</strong> </p>
                <p><strong>Birthday:</strong> </p>
                <p><strong>Nationality:</strong> </p>
                <p><strong>Province:</strong> </p>
            </div>
        </div>
    </section>

    <!-- Title and Flight Info Card -->
    <section class="flight-info-section" id="flight-info-section">
        <h2 class="section-title">Flight Information</h2>
        <div class="info-card">
            <div class="info-details">
                <p><strong>Flight Number:</strong> <!--database--></p>
                <p><strong>Date:</strong> </p>
                <p><strong>Time:</strong> </p>
                <p><strong>Destination:</strong> </p>
            </div>
        </div>
    </section>

    <!-- Chat with Organizer Section (Initially Hidden) -->
    <section class="chat-section" id="chatSection" style="display: none;">
    <h2 class="section-title">Chat with Organizer</h2>
    <div class="chat-box" id="chat-box"></div>
    <div class="chat-input">
        <input type="text" id="messageInput" placeholder="Type your message here">
        <button id="sendButton">Send</button>
    </div>
</section>
</main>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/JavaScript/homePilgScript.js"></script>
</body>
</html>
