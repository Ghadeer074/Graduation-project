<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pilgrim Groups Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/public/Css/stylegroup.css"> 
</head>
<body>
    <h1>Pilgrim Groups</h1>
    <button class="button" id="addGroupBtn">Add Group</button>
    
    <table id="groupsTable">
        <thead>
            <tr>
                <th>Group Number</th>
                <th>Governorate</th>
                <th>Max Members</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (groups && groups.length > 0) { %>
                <% groups.forEach(function(group) { %>
                    <tr>
                        <td><%= group.groupID %></td>
                        <td><%= group.groupProvince %></td>
                        <td><%= group.groupSize %></td>
                        <td>
                            <button class="button edit-btn" data-id="<%= group.groupID %>">Edit</button>
                            <button class="button delete-btn" data-id="<%= group.groupID %>">Delete</button>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4">No groups available.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Add Group Popup -->
    <div class="popup" id="addGroupPopup">
        <div class="popup-content">
            <span class="close" id="closeAddPopup">&times;</span>
            <h2>Add New Group</h2>
            <form id="addGroupForm">
                <label for="groupNumber">Group id :</label>
                <input type="text" id="groupNumber" name="groupID" required><br>
                <label for="governorate">province:</label>
                <input type="text" id="governorate" name="groupProvince" required><br>
                <label for="maxMembers">Max Members:</label>
                <input type="number" id="maxMembers" name="groupSize" required><br>
                <button type="submit" class="button">Add Group</button>
            </form>
        </div>
    </div>

    <!-- Delete Group Popup -->
    <div class="popup" id="deleteGroupPopup">
        <div class="popup-content">
            <span class="close" id="closeDeletePopup">&times;</span>
            <h2>Confirm Deletion</h2>
            <p id="deleteConfirmationMessage"></p>
            <button class="button" id="confirmDeleteBtn">Yes, Delete</button>
            <button class="button" id="cancelDeleteBtn">Cancel</button>
        </div>
    </div>

    <!-- Edit Group Popup -->
    <div class="popup" id="editGroupPopup">
        <div class="popup-content">
            <span class="close" id="closeEditPopup">&times;</span>
            <h2>Edit Group</h2>
            <form id="editGroupForm">
                <label for="editGroupNumber">Group id:</label>
                <input type="text" id="editGroupNumber" name="groupID" required><br>
                <label for="editGovernorate">province:</label>
                <input type="text" id="editGovernorate" name="groupProvince" required><br>
                <label for="editMaxMembers">Max Members:</label>
                <input type="number" id="editMaxMembers" name="groupSize" required><br>
                <button type="submit" class="button">Update Group</button>
            </form>
        </div>
    </div>

    <script src="/public/JavaScript/script-group.js"></script> 
</body>
</html>